<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="409dp"
    android:layout_height="729dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/recipe1Title"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_marginBottom="979dp"
            android:paddingBottom="8dp"
            android:text="Monte Cristo Croissant Casserole"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.463"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.155" />

        <TextView
            android:id="@+id/r1ingredientsTitle"
            android:layout_width="340dp"
            android:layout_height="39dp"
            android:layout_marginTop="12dp"
            android:text="Ingredients:"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe1Title" />


        <TextView
            android:id="@+id/r1ingredients"
            android:layout_width="340dp"
            android:layout_height="258dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="34dp"
            android:text="• 7 large eggs
            \n• 1 1/3 cups half-and-half
            \n• 4 teaspoons Dijon mustard
            \n• 1 1/2 teaspoons kosher salt
            \n• 1/2 teaspoon black pepper
            \n• 8 slices deli smoked ham (1/4-inch thick)
            \n• 8 slices deli smoked turkey (1/4-inch thick)
            \n• 8 slices Swiss cheese
            \n• 8 day-old croissants, halved horizontally
            \n• Cooking spray
            \n• 2 tablespoons seedless raspberry jam
            \n• 1 tablespoon pure maple syrup
            \n• Powdered sugar"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.914"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/r1ingredientsTitle" />


        <TextView
            android:id="@+id/r1instructionsTitle"
            android:layout_width="340dp"
            android:layout_height="41dp"
            android:layout_marginTop="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Instructions:"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.463"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/r1ingredients" />

        <TextView
            android:id="@+id/r1instructions"
            android:layout_width="339dp"
            android:layout_height="315dp"
            android:layout_marginTop="8dp"
            android:text="1. Whisk the eggs, half-and-half, mustard, salt, and pepper in a large bowl until smooth. Set aside.
            \n2. Lightly grease a 13x9-inch baking dish with cooking spray.
            \n3. Place 1 slice of the ham, 1 slice of the turkey, and 1 slice of the Swiss cheese on the bottom half of each croissant.
            \n4. Cover with the top halves. Place the stuffed croissants in the baking dish.
            \n5. Pour the egg mixture over the croissants. Cover with aluminum foil, and chill for 8 hours or up to 12 hours.
            \n6. Preheat the oven to 350°F. Bake, covered, for 15 minutes.
            \n7.Uncover and continue to bake until the tops of the croissants are golden brown and the egg mixture is almost set, about 20 minutes.
            \n8.Let cool for 10 minutes."
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.457"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/r1instructionsTitle" />

        <TextView
            android:id="@+id/recipe2Title"
            android:layout_width="340dp"
            android:layout_height="56dp"
            android:layout_marginTop="900dp"
            android:paddingBottom="8dp"
            android:text="Broccoli Alfredo Pasta"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.449"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/r2ingredientsTitle"
            android:layout_width="340dp"
            android:layout_height="27dp"
            android:layout_marginTop="16dp"
            android:text="Ingredients:"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe2Title" />


        <TextView
            android:id="@+id/r2ingredients"
            android:layout_width="340dp"
            android:layout_height="137dp"
            android:layout_marginTop="16dp"
            android:text="• 4 ounces farfalle pasta
             \n • 2 cups fresh broccoli florets
             \n • 2 tablespoons unsalted butter
             \n • 1/2 cup heavy cream
             \n • 3/4 cup freshly grated Parmesan cheese
             \n • 1/2 teaspoon minced garlic
             \n • 1 pinch ground nutmeg, or to taste
             \n • salt and freshly ground black pepper to taste
             \n • fresh parsley sprigs for garnish (optional)
             "
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/r2ingredientsTitle" />

        <TextView
            android:id="@+id/r2instructionsTitle"
            android:layout_width="340dp"
            android:layout_height="33dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="36dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Instructions:"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/r2ingredients" />

        <TextView
            android:id="@+id/r2instructions"
            android:layout_width="340dp"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:text="1. Bring a large pot of lightly salted water to a boil. Cook farfalle pasta at a boil, stirring occasionally, until tender yet firm to the bite, about 12 minutes.
             2. Remove to a colander;
             3. reserve the pasta water for later use.
             4. Add broccoli to a microwave-safe container along with 1/4 cup water. Cover and cook on High until bright green and tender with a bite, about 4 minutes. Drain; season with salt. Keep warm.
              5. Melt butter in a skillet or saucepan over low heat. Stir in cream and allow to simmer, stirring often, 3 to 4 minutes.
              6. Add cheese and garlic, stirring continuously, until cheese is melted.
              7. Stir in nutmeg and remove from heat. sauce is too thick, stir in a bit of reserved pasta water.
              8. Season to taste with salt and pepper.
              9. To serve, combine cooked pasta, cooked broccoli, and sauce. Garnish with fresh parsley sprigs, if desired.
             "
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/r2instructionsTitle" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_margin="16dp"
            android:layout_marginTop="660dp"
            android:elevation="4dp"
            android:text="Go Back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


</FrameLayout>